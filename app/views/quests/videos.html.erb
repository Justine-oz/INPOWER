<div class="flash-videos">
  <h4 class="title-main"><%= @quest.name%></h4>

    <%= link_to "Retour", quest_path(@quest), class: "btn btn-dark position-absolute" %>
    <br>
    <br>


<div id="carousel-example-multi" class="carousel slide carousel-multi-item v-2" data-ride="carousel">
  <!--Controls-->
  <div class="controls-top">
    <a class="btn-floating" href="#carousel-example-multi" data-slide="prev"><i
        class="fas fa-chevron-left"></i></a>
    <a class="btn-floating" href="#carousel-example-multi" data-slide="next"><i
        class="fas fa-chevron-right"></i></a>
  </div>
  <!--/.Controls-->

  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-multi" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-multi" data-slide-to="1"></li>
  </ol>
  <!--/.Indicators-->


  <div class="carousel-inner v-2" role="listbox">
    <div class="carousel-item active">
      <% @videos.first(2).each do |video| %>
      <div class="col-6 col-sm-4">
        <div class="card mb-2">
          <iframe max-width="100%" height="200" src="<%= video.url %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
          <div class="card-body">
            <h4 class="card-title font-weight-bold"><%= video.name %></h4>
            <p class="card-text"><%= video.description %></p>
            <a class="btn btn-primary btn-md btn-rounded">Button</a>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <div class="carousel-item">
      <% @videos.last(2).each do |video| %>
      <div class="col-6 col-sm-4">
        <div class="card mb-2">
          <iframe max-width="100%" height="200" src="<%= video.url %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
          <div class="card-body">
            <h4 class="card-title font-weight-bold"><%= video.name %></h4>
            <p class="card-text"><%= video.description %></p>
            <a class="btn btn-primary btn-md btn-rounded">Button</a>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    </div>

  </div>
</div>




